<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".main.fragment.home.activity.tosellactivity.ToSellActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:id="@+id/edt_title"
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:hint="标题"/>

        <EditText
            android:singleLine="false"
            android:layout_width="match_parent"
            android:layout_height="100dp"
           android:theme="@style/MyEditText"
            android:hint="请描述一下你的物品"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/orange">

    </View>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_s2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textColor="@color/orange"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="@dimen/margin_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890"
            android:theme="@style/MyEditText"
            android:hint="点击输入"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ号: "
            android:textColor="@color/orange"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="@dimen/margin_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:hint="点击输入"
            android:theme="@style/MyEditText"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textColor="@color/orange"
            android:textSize="18sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出售方式"
            android:textColor="@color/orange"
            android:textSize="18sp"/>
       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RadioButton
               style="@style/radiobutton_style3"
               android:drawableLeft="@drawable/check_selector"
               android:layout_marginLeft="@dimen/margin_s5"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:text="卖东西"
               android:textSize="12sp"
               android:textColor="@color/orange"/>

           <RadioButton
               style="@style/radiobutton_style3"
               android:drawableLeft="@drawable/check_selector"
               android:layout_marginLeft="@dimen/margin_s5"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:textSize="12sp"
               android:text="物换物"
               android:textColor="@color/orange"/>

           <RadioButton
               style="@style/radiobutton_style3"
               android:drawableLeft="@drawable/check_selector"
               android:layout_marginLeft="@dimen/margin_s5"
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:text="拍卖"
               android:textSize="12sp"
               android:textColor="@color/orange"/>
       </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一口价: "
            android:textColor="@color/orange"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="@dimen/margin_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyEditText"
            android:digits="0123456789."
            android:hint="点击输入（元）"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物换物: "
            android:textColor="@color/orange"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="@dimen/margin_s3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/MyEditText"
            android:hint="点击输入"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量:     "
            android:textColor="@color/orange"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginLeft="@dimen/margin_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="点击输入"
            android:theme="@style/MyEditText"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/margin_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍卖"
            android:textColor="@color/orange"
            android:textSize="18sp"/>

        <TextView
            android:layout_marginLeft="@dimen/margin_s5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起价:"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入（元）"
            android:digits="0123456789"
            android:theme="@style/MyEditText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加价:"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入（元）"
            android:digits="0123456789"
            android:theme="@style/MyEditText"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dep_grey">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/margin_s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间："
                android:textColor="@color/orange"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-4-17      22:22"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

        <ScrollView
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_spread"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:layout_weight="1"
                    android:text="确定发布"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




</LinearLayout>