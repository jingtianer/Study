<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/width_s40"
            android:layout_height="@dimen/height_s40"
            android:layout_marginTop="@dimen/size_s3"
            android:layout_marginLeft="@dimen/size_s3"
            android:layout_marginRight="@dimen/size_s3"
            android:layout_marginBottom="@dimen/size_s3"
            android:scaleType="fitXY"
            android:src="@drawable/ic_uniform" />
        <TextView
            android:layout_marginLeft="@dimen/size_s3"
            android:id="@+id/goodsIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


</LinearLayout>