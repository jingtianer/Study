<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/un_complete_image"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:src="@drawable/ic_blue_skirte"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/un_complete_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淑女学生蕾丝连衣裙，修身甜美小清新"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_marginTop="@dimen/margin_s2"
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_no_talk"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:layout_width="40dip"
                    android:layout_marginTop="@dimen/margin_s2"
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sale"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:layout_width="40dip"
                    android:layout_marginTop="@dimen/margin_s2"
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thing_for_thing"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格："/>
                <TextView
                    android:id="@+id/un_complete_price"
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28.9"
                    android:textColor="@color/red"
                    android:textSize="@dimen/size_s5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_s3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间："
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/un_complete_deadLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.10.08"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_marginLeft="@dimen/margin_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人数："
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/un_complete_participant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1009"
                    android:textSize="10sp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.reby.CircleImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_s2"
                android:scaleType="centerInside"
                android:src="@drawable/ic_blue_skirte" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/margin_s2"
                       android:layout_marginTop="@dimen/margin_s2"
                       android:text="徐美丽"
                       android:textSize="@dimen/size_s5" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/margin_s2"
                       android:layout_marginLeft="80dp"
                       android:text="2016.03.05  18:22" />
               </LinearLayout>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_s3">
                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/margin_s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tel: 18712345678"/>
                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/margin_s5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ: 12345678912"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_s3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请："/>

            <TextView
                android:layout_marginLeft="@dimen/margin_s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_s3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原因："/>

            <TextView
                android:layout_marginLeft="@dimen/margin_s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不想要了，就是这么任性"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dep_grey">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联系卖家"
                android:textColor="@color/orange"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/dep_grey">

            </View>
            <Button
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="同意申请"
                android:textColor="@color/red"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>