<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".WelcomeActivity">
    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="@dimen/width_s50"
        android:layout_height="@dimen/height_s50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_46"
        android:src="@drawable/ic_welcome_logo" />

   <LinearLayout
       android:layout_gravity="bottom"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:id="@+id/welcome_introduction"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/height_s35"
           android:text="@string/text_welcome" />
   </LinearLayout>


</LinearLayout>